<defs>
        <symbol id="shadowText" type="shadowText">
            <text id="text" class="myText" display="none"/>  <!--element inherits text/text-props - set letterSpacing/textAnchor on class .layout-->
            <text id="shadow" class="myText shadow"/>               <!--so fill and/or offset can be set per class .shadow-->
            <text  id="highlight" class="myText light"/>            <!--so fill and/or offset can be set per class .highlight-->             
            <text id="main" class="myText main"/>                   <!--so fill can be set per class .main / x,y is hardcoded to 0,0 as others are set in relation-->
        </symbol>
      
    </defs>